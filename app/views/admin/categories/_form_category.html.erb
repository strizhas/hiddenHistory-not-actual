<%= form_for @category, :url => "/admin/categories/#{@category.id}" , :id => @category.id do |f| %>

  <%= hidden_field_tag 'category[parent_category_type]', params[:parent_category_type] if params[:parent_category_type] != nil %>
  
  <%= f.label :title, 'название категории', :class => 'form-label' %>
  <%= f.text_field :title, class: 'form-input' %>

  <%= f.label :description, 'описание категории', :class => 'form-label' %>
  <%= f.text_area :description, class: 'form-input' %>
  <br><br>
  <%= f.submit %>
 
<% end %>