<%= form_for [ category, Category.new ], :url => "categories/#{category.id}/categories.html", :format => :html, html: { class: "subcategory-form" }  do |f| %>


  <%= f.label :title, 'название категории', :class => 'form-label' %>
  <%= f.text_field :title, class: 'form-input' %>

  <%= f.label :description, 'описание категории', :class => 'form-label' %>
  <%= f.text_area :description, class: 'form-input' %>
  <br><br>
  <%= f.submit %>
 
<% end %>