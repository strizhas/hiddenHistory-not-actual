
<li class="post-preview-content-small">
  <%= image_tag post.image.thumb.url, class: "rounded-preview-img" if post.image.thumb.present? %>
    <div class="post-preview-body">

      <%=  link_to post.title , building_path(post), class: 'header-link', data: { no_turbolink: true } %>

      <p><%= post.intro %></p>

      <%= post.era %>
                    
    </div>  
                
</li>    