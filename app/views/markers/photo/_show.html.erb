	
	<div class="schema-photo-header">

		<%= link_to ' ', add_like_path( @photo.id, :type => 'Photo' ) , class: 'slider-like-button'%>
		
	  		<div class="slider-likes-counter">
	  		<%= @likes %>
	  		</div>
	  		<span class="separator">|</span>
	  		<%= link_to @owner.username, user_path( @owner.id )%>
	  	<div id="close-show-photo-button"></div>	
	</div>
	<div id="photo-section">

		<%= image_tag @photo.image.big.url, :name => 'photo[image]', :id => 'photo-big-preview' %>
		
	</div>


	<div class="text-section">
		<%= @photo.text %>
	</div>
	<div id="comments-section">
	
		<div id="comment-list">
			<%= render  @photo.comments.select { |c| c[:published] == true }  %>
		</div>
		
		<%= render partial: 'comments/form', object: @photo, as: 'commentable' %>

	</div>
