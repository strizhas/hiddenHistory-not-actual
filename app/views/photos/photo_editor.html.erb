<div id="popup-image-editor-main">
	<%= form_for @photo,  html: { class: "popup-image-editor" }, :remote => true do |f| %>
		<div id="popup-tint" class="popup-white-tint"></div>
		<div id="popup-image-editor-img" class="progress-bar-area">

			<% if current_user.is? "admin" %>
				<%= link_to '', @photo, :class=> "remove-image-button", :id => 'remove-image-button', :remote => true, 
		             	method: :delete, 
		             	data: { confirm: 'Вы уверены?' } %>
			<% end %>

			<button id="call-image-editor" class="crop-image-button" type="button"></button>
			<%= image_tag @photo.image.url, :name => 'photo[image]' %>
		</div>

		<div id="popup-image-editor-form">
			<table class="photo-inputs-table" cellpadding="0">
				<tr>
					<th class="left-section">
						<%= f.label :author, 'источник фотографии' %><br>
					</th>
					<th class="right-section">
						<%= f.label :text, 'описание' %><br>
					</th>
				</tr>
				<tr>
					<td class="left-section">
		 				<%= f.text_field :author, :class => 'rounded-input' %>
					</td>
					<td rowspan="3" class="right-section">
		 				<%= f.text_area :text, :class => 'rounded-input photo-text' %>
					</td>
				</tr>
				<tr>
					<th>
						<%= f.label :year, 'когда сделано (год)' %>
					</th>
				</tr>
				<tr>
					<td class="left-section">
		 				<%= f.text_field :year, :class => 'rounded-input' %>
					</td>
				</tr>
				<tr>
					<td colspan="2">
						<div class="help-text">
							<br>
				 			иногда изменения могут вступить в силу только через некоторое время
				 		</div>
					</td>
				</tr>

				<% if current_user.is? "admin" %>
					<tr>
						<td colspan="2">
							<%= f.label :alt, 'атрибут alt изображения' %><br>
				 			<%= f.text_area :alt, :class => 'form-input' %>
		 				</td>
		 			</tr>
		 			<tr>
						<td colspan="2">
							<%= f.label :building_id, 'id сооружения' %><br>
				 			<%= f.text_area :building_id, :class => 'form-input' %>
		 				</td>
		 			</tr>
				<% end %>

			</table>
	 			 		
	 	</div>

	 	

	 	<div id="popup-image-editor-footer">
			<div class="confirm-green-button">
		    	<%= f.submit 'сохранить', :class => 'confirm-green-button-input' %>
			</div>
			<%= f.check_box :published %>
			<%= f.label :published, 'опубликована' %>
			<%= link_to 'почему не стоит публиковать некоторые фотографии?',
						{ :controller => :pages, :action => :show, :page => 'terms' }, :class => 'help-text' %>
		</div>
	 
	<% end %>
</div>