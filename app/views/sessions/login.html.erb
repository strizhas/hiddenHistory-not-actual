<%= render 'shared/login_menu' %>

<main class="login-main">
	
	<div class= "sign-form">
		<h2>вход на сайт</h2>
	 	<%= form_tag(:action => 'login_attempt') do %>
	    	<%= text_field_tag :username_or_email , nil, placeholder: 'логин или электронная почта' %>
	    	<%= password_field_tag :login_password , nil, placeholder: 'пароль' %>
	    	<%= submit_tag "войти" , class: "submit-button" %>
	  	<% end %>

	
	<% flash.each do |name, msg| -%>
		<%= content_tag :div, msg, class: name %>
	<% end -%>


	</div>

</main>


<% if params.has_key?(:unset_user_id) %>
  <script type="text/javascript">
    $(function() {
        unset_current_user_id();
    });
  </script>
<% end %>