<h2>пользователи</h2>
 
    <table class="admin-users-list">
    <tr>
    	<th>имя пользователя</th>
    	<th>почта</th>
    	<th>дата рождения</th>
    	<th>дата регистрации</th>
    	<th>последнее обновление</th>
    	<th>роль</th>
    	<th>редактировать</th>
    </tr> 
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.birthdate %></td>
          <td><%= user.created_at.strftime("%d %B %Y") %></td>
          <td><%= user.updated_at.strftime("%d %B %Y") %></td>
          <td><%= user.role %></td>
          <td>
          	<%= link_to 'редактировать',edit_admin_user_path(user)  %>	
          </td>         
        </tr>
    <% end %>
</table>
